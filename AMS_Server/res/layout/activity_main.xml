<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:visibility="visible"
    tools:context=".MainActivity" >

	<Button
	    android:id="@+id/btn_image"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:text="Image"
	    android:visibility="gone" />

	<Button
	    android:id="@+id/btn_video"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/btn_image"
	    android:text="Video"
	    android:visibility="gone" />

  <Button
      android:id="@+id/btn_music"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/btn_video"
      android:text="Music"
      android:visibility="gone" />

	<Button
	    android:id="@+id/btn_mirroring"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/btn_music"
	    android:text="Mirror Screen"
	    android:visibility="gone" />

	<CheckBox
	    android:id="@+id/cb_capture"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@+id/imgbtn_ams"
	    android:layout_centerVertical="true"
	    android:text="Capture Widget"
	    android:visibility="gone" />

	<CheckBox
	    android:id="@+id/cb_control"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/cb_capture"
	    android:layout_below="@+id/cb_capture"
	    android:text="Control Widget"
	    android:visibility="gone" />

	<ImageButton
	    android:id="@+id/imgbtn_ams"
	    android:layout_width="400dp"
	    android:layout_height="400dp"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="20dp"
	    android:background="@drawable/ams"
	    android:maxWidth="@dimen/activity_vertical_margin"
	    android:scaleType="fitXY"
	    android:visibility="visible" />

	<ImageButton
	    android:id="@+id/imgbtn_connect"
	    android:layout_width="200dp"
	    android:layout_height="113dp"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="100dp"
	    android:background="@drawable/imgbtn_disconnected"
	    android:visibility="visible" />

</RelativeLayout>
